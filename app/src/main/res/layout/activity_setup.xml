<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1">

        <TableRow>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_male"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:clickable="true"
                android:src="@drawable/human_male"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_female"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:clickable="true"
                android:src="@drawable/human_female"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/name_male"
                android:layout_width="match_parent"
                android:hint="Nick Name"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical" />

            <EditText
                android:id="@+id/name_female"
                android:layout_width="match_parent"
                android:hint="Nick Name"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical" />
        </TableRow>
    </TableLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_cover_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_set_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt ảnh cover" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_set_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ngày bắt đầu" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_date_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>